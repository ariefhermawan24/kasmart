<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaturan Akun"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <!-- Nama Barang -->
        <EditText
            android:id="@+id/password_lama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:hint="masukkan password lama"
            android:drawableStart="@drawable/password"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <!-- Nama Barang -->
        <EditText
            android:id="@+id/password_baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:hint="masukkan password baru"
            android:drawableStart="@drawable/password"
            android:inputType="text"
            android:minHeight="48dp" />

        <CheckBox
            android:id="@+id/verifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saya Setuju Untuk Mengubah Password"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/account_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#504B4B"
                android:text="Reset"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/reset" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Simpan"
                android:backgroundTint="#0A710E"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                app:icon="@drawable/save"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>